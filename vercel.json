{
  "version": 2,
  "builds": [
    { "src": "*.html", "use": "@vercel/static" },
    { "src": "styles/**", "use": "@vercel/static" },
    { "src": "scripts/**", "use": "@vercel/static" },
    { "src": "images/**", "use": "@vercel/static" },
    { "src": "api/**/*.js", "use": "@vercel/node" }
  ],
  "routes": [
    { 
      "src": "/api/(.*)", 
      "dest": "/api/$1",
      "methods": ["GET", "POST", "OPTIONS"]
    },
    { "src": "/(.*)", "dest": "/$1" }
  ]
}
